<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1.myheadlinenews.Yanzheng_Login"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置个人信息"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>
    <TextView
        android:id="@+id/zhuce_wancheng"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="#000"
        android:textSize="22sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/finish_view"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="#BABABA"
    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_tx"
       android:layout_gravity="center"
        android:background="@mipmap/feed_user_night"
        android:src="@mipmap/feedback_upload_icon_night"/>

    <LinearLayout
        android:id="@+id/set_linear"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_tip_username"
            />
        <EditText
            android:id="@+id/set_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#BABABA"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>

</LinearLayout>
